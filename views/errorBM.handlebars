<h3 class = "ui red header">The bookmark to this link is already created</h3>

<h2>Create Bookmark</h2><br/><br/>

<form action = "/api/bookmark" method="POST" class="ui form">
        <div class = "field">
            <label for="link">Link</label>
            <input type="text" name="blink" required>
        </div>
        <div class = "field">
            <label for="title">Title</label>
            <input type="text" name="btitle" required>
        </div>
        <div class = "field">
            <label for="publisher">Publisher</label>
            <input type="text" name="bpublisher" required>
        </div>
        <div class = "field">
            <label for="title">Tags</label>
            <select name = "btag">
                <option value='507f191e810c19729de860ea'>Select Tag</option>
                {{#each tag }}
                    <option value = {{this.id}}>{{this.title}}</option>
                {{/each}}
            </select>
        </div>
     <input type="submit" value="Create" class="fluid ui teal button">
</form>
